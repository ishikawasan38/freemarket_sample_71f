.registrationHeader
  .registrationHeader__contents
    .header__contents__logo
      = link_to image_tag("logo.png", size: :'140x40', class: "registrationHeader__contents__logo__icon"), "/"
    .registrationHeader__contents__status
.registrationBody
  .registrationBody__title
    %h2 ログイン
  .registrationBody__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .registrationBody__form__field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .registrationBody__form__field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password"
      -# - if devise_mapping.rememberable?
      -#   .registrationBody__form__field
      -#     = f.check_box :remember_me
      -#     = f.label :パスワードをお忘れの方
      .registrationBody__form__actions
        = f.submit "ログイン", class: 'button'
    = render "devise/shared/links"
    .registrationBody__form__text
.registrationFooter
  .registrationFooter__contents
    .registrationFooter__contents__top
      %ur
        %li プライバシーポリシー
        %li フリマ利用規約
        %li 特定商取引に関する表記
    .registrationFooter__contents__logo
      %ur
        %li ©frima, Inc.