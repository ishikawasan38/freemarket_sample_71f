.all
  .wrapper
    = render "/shared/header"

  .sale
    .sale__files
      =form_with(model: @item, local: true) do |f|
        -# #image-box
        -#   = f.fields_for :photos do |image|
        -#     .js-file_group{"data-index" => "#{image.index}"}
        -#       = image.file_field :image, class: 'js-file'
        -#       %span.js-remove 削除
        -#     - if @item.persisted?
